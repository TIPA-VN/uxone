FROM python:3.11-slim

RUN apt-get update && apt-get install -y \
    libaio1 \
    unzip \
    gcc \
    python3-dev \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY . .

# ✅ Dùng file zip đã có sẵn trong context
RUN unzip instantclient-basiclite-linux.x64-21.18.0.0.0dbru.zip && \
    mv instantclient_21_18 /opt/instantclient && \
    ln -s /opt/instantclient/libclntsh.so.21.1 /usr/lib/libclntsh.so && \
    echo /opt/instantclient > /etc/ld.so.conf.d/oracle-instantclient.conf && \
    ldconfig

# Tạo và activate venv
RUN python -m venv /env
ENV PATH="/env/bin:$PATH"
ENV LD_LIBRARY_PATH="/opt/instantclient"

COPY requirements.txt .
RUN pip install --upgrade pip && pip install -r requirements.txt

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8012"]
